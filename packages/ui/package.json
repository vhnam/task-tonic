    "build": "yarn build:tailwind && tsc"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@repo/utils": "*",
    "@types/node": "^20.11.24",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.1",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@mui/base": "^5.0.0-beta.68",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
