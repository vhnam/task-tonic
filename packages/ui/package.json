{
  "name": "@repo/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    "./components/button": {
      "types": "./src/components/button.tsx",
      "default": "./dist/components/button.js"
    },
    "./components/typography": {
      "types": "./src/components/typography.tsx",
      "default": "./dist/components/typography.js"
    },
    "./styles.css": "./dist/index.css"
